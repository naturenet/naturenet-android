<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageview_add_ideas"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:gravity="center"
        android:text="Leave your design idea for this app"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editText_design_idea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:imeOptions="actionDone"
		android:hint="Type your design idea here..." >
        <requestFocus />
    </EditText>

    <ImageView
        android:id="@+id/imageview_add_ideas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:src="@drawable/bulb" />

    <Button
        android:id="@+id/button_submit_idea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editText_design_idea"
        android:layout_marginRight="17dp"
        android:layout_marginTop="52dp"
        android:text="@+string/submit" />

    <Button
        android:id="@+id/button_cancel_idea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_submit_idea"
        android:layout_alignBottom="@+id/button_submit_idea"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="22dp"
        android:text="Cancel" />

</RelativeLayout>



